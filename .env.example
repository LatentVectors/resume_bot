# Database Configuration
DATABASE_URL=sqlite:///data/resume_bot.db

# LLM Providers
# For OpenRouter details see: https://openrouter.ai/docs/quickstart
# For OpenRouter integration with LangChain see: https://openrouter.ai/docs/community/lang-chain
OPENROUTER_API_KEY=<your-open-router-api-key>
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Only configure if you want to engage in app attribution in OpenRouter.
# See: https://openrouter.ai/docs/app-attribution
OPENROUTER_SITE_URL=<your-site-url for OpenRouter attribution (optional)>
OPENROUTER_SITE_NAME=<your-site-name for OpenRouter attribution (optional)>

# LangSmith Configuration (for tracing and debugging)
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=<your-api-key>
LANGSMITH_PROJECT=resume-bot

# App Configuration
APP_NAME=Resume Bot
DEBUG=true
